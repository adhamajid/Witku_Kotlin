<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                layout="@layout/main_toolbar"/>

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:layout_centerInParent="true"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="0dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="0dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#FFF"
                app:sliderScrollTimeInSec="1"
                tools:ignore="MissingClass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="General Information"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:scrollbars="horizontal|vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/G_Definition"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/g_definition" />

                    <ImageView
                        android:id="@+id/G_Jamu"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/g_jamus" />

                    <ImageView
                        android:id="@+id/G_choosing"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/g_choosing" />

                    <ImageView
                        android:id="@+id/G_Tools"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/g_tools" />

                    <ImageView
                        android:id="@+id/G_Toga"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/g_toga" />

                    <ImageView
                        android:id="@+id/G_guide"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/g_guide" />

                    <ImageView
                        android:id="@+id/G_Attention"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/g_attention" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Benefits of Plants"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:scrollbars="horizontal|vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Kunyit"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/b_kunyit" />

                    <ImageView
                        android:id="@+id/Sambiloto"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/sambiloto" />

                    <ImageView
                        android:id="@+id/Sirih"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/sirih" />

                    <ImageView
                        android:id="@+id/Alang"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/alang" />

                    <ImageView
                        android:id="@+id/Mengkudu"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/mengkudu" />

                    <ImageView
                        android:id="@+id/J_biji"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/b_jambu" />

                    <ImageView
                        android:id="@+id/Adas"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/b_adas" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Herbal Treatment"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:scrollbars="horizontal|vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Demam"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/fever" />

                    <ImageView
                        android:id="@+id/Batuk"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/h_batuk" />

                    <ImageView
                        android:id="@+id/Diare"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/diarrhea" />

                    <ImageView
                        android:id="@+id/Mimisan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/nosebleed" />

                    <ImageView
                        android:id="@+id/Sariawan"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/h_sariawan" />

                    <ImageView
                        android:id="@+id/Masuk_angin"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/h_masuk_angin" />

                    <ImageView
                        android:id="@+id/Influenza"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="20dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/h_influenza" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12sp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Imunomodulator"
                />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fillViewport="true"
                android:scrollbars="horizontal|vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/Jahe"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/jahe" />

                    <ImageView
                        android:id="@+id/Sereh"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/serai" />

                    <ImageView
                        android:id="@+id/Kapulaga"
                        android:layout_width="111dp"
                        android:layout_height="137dp"
                        android:layout_marginStart="5dp"
                        android:adjustViewBounds="true"
                        android:background="@color/white"
                        android:src="@drawable/kapulaga" />

                </LinearLayout>
            </HorizontalScrollView>


<!--            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="ca-app-pub-8299199271373776/1164184497">
            </com.google.android.gms.ads.AdView>-->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/main_nav_drawer" />


    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>